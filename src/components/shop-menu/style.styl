.shopMenu
    width: 100%
    display: flex
    justify-content: center
    margin-top: 2px
    .wrapperCategories
        width: 75%
        display: flex
        justify-content: space-between
        .category
            background-color: transparent
            width: 205px
            height 106px
            display: flex
            align-items: center
            justify-content: center
            cursor pointer
            &:hover
                background-color: #5bdae3
                box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.25);
            .categoryInfo
                display: flex
                flex-direction: column
                align-items: center
                .category-text
                    text-align: center
                    margin-top: 10px
                    font-family: 'Roboto';
                    font-size: 16px;
                    font-weight: 300;
                    font-style: normal;
                    font-stretch: normal;
                    line-height: 1.13;
                    letter-spacing: normal;
                    text-align: center;
                    color: #000000;